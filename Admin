def see_all(data):
    for obj in data:
        for k, v in obj.items():
            print(f"{k}: {v}")
        print(f"""\n
        """)

ch = input("""1-add user
            2-control
""")
if ch == 1:
    add_workers()
elif ch == 2:
    edit_workers()


